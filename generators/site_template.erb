<% if @is_list %>



	<div class="row">
		<div class="large-12 columns">
			<h2><%= @title %></h2>
		</div>	
	</div>
	<% @items.reverse.each do |item|	%>
	<div class="row">

		<div class="large-2 columns">
			<h4><%= item[:date] %></h4>
			<% item[:tags].each do |tag| %>
			<div class='box <%= tag %>'><span class='tag'><%= tag%></span></div>
			<% end %>
		</div>

		<div class="large-10 columns">
			<div class="panel">

				<%= item[:first_sentence] %><br/><br/>


			</div>
		</div>

	</div>
	<% end %>
<% else %>
	<div class="row">
		<div class="large-2 columns">
			<h4><%= @item[:date] %></h4>
			<% @item[:tags].each do |tag| %>
			<div class='box <%= tag %>'><span class='tag'><%= tag%></span></div>
			<% end %>
		</div>
		<div class="large-10 columns">
			<div class="panel">
				<p>
				<%= @item[:content] %>
				</p>
			</div>
		</div>
	</div>	
<% end %>

